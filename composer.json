{
    "name": "alleyinteractive/feed-consumer",
    "description": "Ingest external feeds and other data sources into WordPress",
    "type": "wordpress-plugin",
    "keywords": [
        "alleyinteractive",
        "feed-consumer"
    ],
    "homepage": "https://github.com/alleyinteractive/feed-consumer",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Alley Interactive",
            "email": "info@alley.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "alleyinteractive/composer-wordpress-autoloader": "^1.0",
        "mantle-framework/support": "^0.9.1"
    },
    "require-dev": {
        "alleyinteractive/alley-coding-standards": "^1.0",
        "mantle-framework/testkit": "^0.9",
        "nunomaduro/collision": "^5.0"
    },
    "config": {
        "allow-plugins": {
            "alleyinteractive/composer-wordpress-autoloader": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "pestphp/pest-plugin": true
        },
        "sort-packages": true
    },
    "extra": {
        "wordpress-autoloader": {
            "autoload": {
                "Feed_Consumer\\": "src"
            },
            "autoload-dev": {
                "Feed_Consumer\\Tests\\": "tests"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "phpcbf": "phpcbf .",
        "phpcs": "phpcs .",
        "phpunit": "phpunit",
        "phpunit:coverage": "phpunit --coverage-html .coverage",
        "test": [
            "@phpcs",
            "@phpunit"
        ]
    }
}
